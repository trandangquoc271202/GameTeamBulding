<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadView">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/styledPlayerView3"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/process"
        android:visibility="gone">
    </com.google.android.material.progressindicator.LinearProgressIndicator>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÊN CUỘC THI"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/competition_name"
    ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:text="MÃ CUỘC THI"
        android:textAlignment="center"
        android:textSize="17dp"
        android:layout_below="@+id/competition_name"
        android:id="@+id/competition_id"
        android:layout_centerHorizontal="true"
        ></TextView>
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/video_Upload_View"
        android:visibility="gone"
        android:layout_below="@id/competition_id">

    </VideoView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_Upload_View"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:text="Chọn Video"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"></com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/uploadVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectVideo"


        android:layout_alignRight="@id/selectVideo"
        android:layout_alignLeft="@id/selectVideo"
        android:enabled="false"
        android:text="Đăng tải">


    </com.google.android.material.button.MaterialButton>


</RelativeLayout>