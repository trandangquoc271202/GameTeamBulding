<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="719dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


            <View
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="409dp"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:text="CHI TIẾT KẾT QUẢ CUỘC THI"
            android:textAlignment="center"
            android:textColor="#30D040"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:text="người chơi Phạm Thùy Tiên"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTopic"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tên đề tài:"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/valueTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Vẽ tranh"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelContent"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Nội dung đề tài:"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/valueContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Vẽ tranh về buổi chiêu"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTotalScore"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tổng kết điểm:"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/valueTotalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="100"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTotalVote"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tổng người bình chọn"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/valueTotalVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="3"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelView1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Xem bài dự thi"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/valueView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/xem_chi_tiet"
                android:textColor="#30D040"
                android:textSize="16sp"

                ></TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dp"
            android:text="Điểm trong từng người đánh giá:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-80dp"
            android:id="@+id/linearCriteria"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border_result"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelView"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Kết quả"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/valueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="THẮNG"
                android:textColor="#30D040"
                android:textSize="16sp"

                ></TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dp"
            android:layout_marginBottom="10dp"
            android:text="Người chơi nhận xét về kết quả"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_result"
            android:hint="Nhập văn bản"
            android:padding="10dp"></EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:text="Nhận xét"

            ></Button>


    </LinearLayout>
</GridLayout>