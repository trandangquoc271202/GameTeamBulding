<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="409dp"
            android:layout_height="35dp"
            android:text="CHI TIẾT KẾT QUẢ CUỘC THI"
            android:textAlignment="center"
            android:textColor="#30D040"
            android:textSize="24sp"
            android:layout_marginTop="35dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="người chơi Phạm Thùy Tiên"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/labelTopic"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tên đề tài:"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/valueTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vẽ tranh"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/labelContent"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Nội dung đề tài:"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/valueContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vẽ tranh về buổi chiêu"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTotalScore"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tổng kết điểm:"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/valueTotalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTotalVote"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tổng người bình chọn"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/valueTotalVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelView1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Xem bài dự thi"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/valueView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xem_chi_tiet"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#30D040"

                ></TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm trong từng tiêu chí:"
            android:textColor="#000000"
            android:layout_marginLeft="-80dp"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_result"
            android:orientation="vertical"
            android:layout_marginLeft="-80dp"
            android:layout_marginBottom="16dp"
            >
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/labelCriteria1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tiêu chí 1:"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/valueCriteria1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelCriteria2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tiêu chí 2:"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/valueCriteria2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelCriteria3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tiêu chí 3:"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/valueCriteria3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelView"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Kết quả"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/valueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="THẮNG"
                android:textSize="16sp"
                android:textColor="#30D040"

                ></TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người chơi nhận xét về kết quả"
            android:textColor="#000000"
            android:layout_marginLeft="-50dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"/>
        <EditText
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:background="@drawable/border_result"
            android:hint="Nhập văn bản"
            android:padding="10dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginBottom="12dp"
            ></EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhận xét"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"

            ></Button>



    </LinearLayout>
</RelativeLayout>