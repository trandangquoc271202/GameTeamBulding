<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="QUẢN LÍ CUỘC THI"
                android:textColor="#30D040"
                android:textSize="24sp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/border_result"
                android:gravity="left|center_vertical"
                android:hint="Tìm kiếm"
                android:padding="15dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/border_result"
                android:src="@drawable/search"
                app:tint="#30D040"></ImageView>
        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:id="@+id/linearLayoutCompetition"-->
<!--            android:layout_width="400dp"-->
<!--            android:layout_height="wrap_content">-->

<!--            <include-->
<!--                layout="@layout/cardview_competition"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->

<!--        </LinearLayout>-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCompetition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"

            />



    </LinearLayout>

</RelativeLayout>